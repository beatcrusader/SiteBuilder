
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="content_left">
    <span style="color: green;">@TempData["Result"]</span>
</div>

<legend>Database records (@Html.ActionLink("Create Search Index From Database [+]", "CreateIndex"))</legend>
<legend>Clear index (@Html.ActionLink("Clear index", "CreateIndex"))</legend>

<p> Founded Pages</p>

@foreach (var searchResultPage in ViewBag.searchResultsPages)
{
    <p>@searchResultPage.Name</p>
}

<p> Founded Tags </p>

@foreach (var searchResult in ViewBag.searchResultsTags)
{
    <a href="/Search/Tag/@searchResult.Name">@searchResult.Name</a>
}

<p> Founded Comments </p>

@foreach (var searchResult in ViewBag.searchResultsComments)
{
    <a href="/Search/CommentToPage/@searchResult.Id">@searchResult.Content</a>
}