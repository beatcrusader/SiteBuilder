<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @RenderSection("Styles", required: true)
    @Styles.Render("~/Content/site")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquery-ui")
    @Scripts.Render("~/bundles/showpagesite")
    @Scripts.Render("~/bundles/showdown")
    @Scripts.Render("~/bundles/bootstrap-touchspin")
    @Scripts.Render("~/bundles/showcomments")

</head>
<body>
    <div class="container body-content">

            
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="/" class="navbar-brand">@ViewBag.nameSite</a>
                </div>
                <div class="collapse navbar-collapse" id="myNavbar">
                    <ul class="nav navbar-nav">
                        @foreach (var page in ViewBag.pages)
                        {
                            <li>
                                <a href="/SiteBuilder/Show/@ViewBag.user/@ViewBag.nameSite/@page.Name/">@page.Name</a>
                            </li>
                        }
                    </ul>
                    
                    <div class="nav navbar-nav navbar-right" id="likesCounter">
                        <h4>0</h4>
                    </div>

                    <div class="nav navbar-nav navbar-right" id="likesButtons">

                        <div class="button-group">

                            <button type="button" class="btn btn-labeled btn-success">
                                <span class="btn-label"><i class="glyphicon glyphicon-thumbs-up"></i></span>
                            </button>
                            <button type="button" class="btn btn-labeled btn-danger">
                                <span class="btn-label"><i class="glyphicon glyphicon-thumbs-down"></i></span>
                            </button>

                        </div>
                    </div>
                </div>
            </div>
        </nav>

            
            @RenderBody()
                        
    </div>
            <footer>
            </footer>
</body>
</html>