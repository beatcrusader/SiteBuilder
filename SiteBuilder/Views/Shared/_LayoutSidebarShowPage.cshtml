<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>


    <link href="~/Content/sidebar.css" rel="stylesheet" />
    @RenderSection("Styles", required: true)
    @Styles.Render("~/Content/site")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquery-ui")
    @Scripts.Render("~/bundles/showpagesite")
    @Scripts.Render("~/bundles/showdown")
    @Scripts.Render("~/bundles/bootstrap-touchspin")
    @Scripts.Render("~/bundles/showcomments")
    @Scripts.Render("~/bundles/rating")

    @*<script src="~/Scripts/application.js"></script>*@

</head>
<body style="padding-top: 0px">

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-lg-2">
                <nav class="navbar navbar-default navbar-fixed-side" style="width: 100%">
                    <div class="container">
                        <div class="navbar-header">
                            <button class="navbar-toggle" data-target=".navbar-collapse" data-toggle="collapse">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <a class="navbar-brand" href="/">@ViewBag.nameSite</a>
                        </div>
                        <div class="collapse navbar-collapse">
                            <ul class="nav navbar-nav">
                                @foreach (var page in ViewBag.pages)
                                {
                                    <li>
                                        <a href="/SiteBuilder/Show/@ViewBag.user/@ViewBag.nameSite/@page.Name/">@page.Name</a>
                                    </li>
                                }
                            </ul>

                            <div class="nav navbar-nav navbar-left" id="likesButtons">

                                <div class="button-group">
                                    <button type="button" class="btn btn-labeled btn-success" id="upRating" style="display: inline-block">
                                        <span class="btn-label"><i class="glyphicon glyphicon-thumbs-up disabled"></i></span>
                                    </button>

                                    <button type="button" class="btn btn-labeled btn-danger" id="downRating" style="display: inline-block">
                                        <span class="btn-label"><i class="glyphicon glyphicon-thumbs-down disabled"></i></span>
                                    </button>

                                    <div id="likesCounter" style="display: inline-block">
                                        <h4>0</h4>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </nav>
            </div>
            <div class="col-sm-9 col-lg-10">
                <div id="content">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <footer>
        <p>&copy; @DateTime.Now.Year - @Resources.Resource.ApplicationName</p>
    </footer>
</body>
</html>
