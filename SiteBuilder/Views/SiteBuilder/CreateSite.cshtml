@model SiteBuilder.Models.Site

@{
    ViewBag.Title = "CreateSite";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CreateSite</h2>

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()
                @Html.HiddenFor(x => x.UserId, new { Value = ViewBag.UserId })
                <div class="form-group">
                    <label>Name</label>
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", type = "text" })
                </div>
                <div class="form-group">
                    <label>Description</label>
                    @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="inputTypeMenu">Type menu</label>
                    <select name="TypeMenuId" id="inputTypeMenu" class="form-control">
                        @foreach (var TypeMenu in ViewBag.TypeMenus)
                        {
                            <option value="@TypeMenu.Id">@TypeMenu.Name</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
            }
        </div>
    </div>
</div>

